clean-mgc:
	rm -rf mgc

clean-lf0:
	rm -rf lf0

clean-str:
	rm -rf str

clean-mag:
	rm -rf mag

clean-cmp:
	rm -rf cmp

clean-label:
	rm -rf labels/mono
	rm -rf labels/full

clean-mlf:
	rm -f labels/*.mlf

clean-list:
	rm -rf lists

clean-scp:
	rm -rf scp

distclean: clean
	rm -f Makefile

.PHONY: all analysis labels mgc lf0 cmp label mlf list scp clean
